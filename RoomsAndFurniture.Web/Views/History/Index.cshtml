@{
    Layout = "~/Views/_Layout.cshtml";
    ViewBag.Title = "История";
}

@Scripts.Render("~/Scripts/History")

<div class="historyContent content">
    <div class="controlPanel">
        <label class="historyControl">
            <span>Сокращённая история</span>
            @if (Model.IsShort)
            {
                <input type="checkbox" class="shortHistory historyControl" checked/>
            }
            else
            {
                <input type="checkbox" class="shortHistory historyControl" />
            }
        </label>
    </div>
    <table class="eventsTable contentTable">
        <thead>
            <tr>
                <td class="itemDate">Дата</td>
                <td>Описание</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var roomEvent in Model.Events)
            {
                <tr>
                    <td class="itemDate">@roomEvent.Date.ToString("dd'.'MM'.'yyyy")</td>
                    <td>@roomEvent.Description</td>
                </tr>
            }
        </tbody>

    </table>
</div>
